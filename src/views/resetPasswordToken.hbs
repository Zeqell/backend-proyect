<section class="section_account">
    <h1>Establecer una nueva contraseña</h1>

    <form action="/reset-password?token={{token}}" method="POST" class="form-group">
        <input type="password" name="newPassword" placeholder="New Password" required>
        <input type="password" name="confirmPassword" placeholder="Confirm New Password" required>
        <button class="btn btn-primary" type="submit">Establecer nueva contraseña</button>
    </form>
</section>